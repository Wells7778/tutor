<div class="row">
  <div class="col-9">
    <div class="container-fluid">
      <div class="row row-cols-3 g-2">
        <div class="col-12">
          <div id="search mb-2">
            <input type="text" class="form-control" id="search-input" placeholder="Type">
          </div>
        </div>
        {{#each tutors}}
        <a href="/tutors/{{this.id}}" class="text-reset text-decoration-none">
          <div class="col">
            <div class="card mb-3">
              <img src="{{this.User.avatar}}" class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title">{{this.User.name}}</h5>
                <p class="card-text text-truncate-4">{{this.introduction}}</p>
                <p class="card-text"><small class="text-muted">{{this.User.country}}</small></p>
              </div>
            </div>
          </div>
        </a>
        {{/each}}
        <div class="col-12">
          <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
              <li class="page-item">
                <a class="page-link" href="#" aria-label="Previous">
                  <span aria-hidden="true">&laquo;</span>
                </a>
              </li>
              <li class="page-item"><a class="page-link" href="#">1</a></li>
              <li class="page-item"><a class="page-link" href="#">2</a></li>
              <li class="page-item"><a class="page-link" href="#">3</a></li>
              <li class="page-item">
                <a class="page-link" href="#" aria-label="Next">
                  <span aria-hidden="true">&raquo;</span>
                </a>
              </li>
            </ul>
          </nav>
        </div>
      </div>
    </div>
  </div>
  <div class="col-3">
    <div class="container-fluid">
      <div class="row row-cols-1 border">
        <div class="col">
          <ul class="nav nav-tabs nav-fill justify-content-center g-2 my-3">
            <li class="nav-item">
              <button class="nav-link active" id="rank-week-tab" data-bs-toggle="tab" data-bs-target="#rank-week"
                type="button" role="tab" aria-controls="rank-week" aria-selected="true">本周排行</button>
            </li>
            <li class="nav-item">
              <button class="nav-link" id="rank-tab" data-bs-toggle="tab" data-bs-target="#rank" type="button"
                role="tab" aria-controls="rank" aria-selected="false">總排行</button>
            </li>
          </ul>
        </div>
        <div class="col tab-content">
          <div class="tab-pane fade show active" id="rank-week" role="tabpanel" aria-labelledby="rank-week-tab"
            tabindex="0">
            {{#each rankStudentsByWeek}}
            <div class="col">
              <div class="row my-2">
                <div class="col-2">
                  <img src="{{this.avatar}}" class="circle-img-1" alt="...">
                </div>
                <div class="col-10 justify-content-center align-items-center d-flex">
                  <p class="fs-5 text-center">No.{{this.rank}}</p>
                  <p class="fs-5 text-center">{{this.name}}
                    <small>{{this.minutes}}min.</small>
                  </p>
                </div>
              </div>
            </div>
            {{/each}}
          </div>
          <div class="tab-pane fade" id="rank" role="tabpanel" aria-labelledby="rank-tab" tabindex="1">
            <div class="container-fluid">
              {{#each rankStudents}}
              <div class="d-flex justify-content-between my-2">
                <div class="mr-2">
                  <img src="{{this.avatar}}" class="circle-img" alt="...">
                </div>
                <div class="m-3">
                  <div class="fs-5 text-center">No.{{this.rank}}</div>
                  <div class="fs-5 text-center">{{this.name}}</div>
                  <div class="fs-5 text-center">{{this.minutes}}min.</div>
                </div>
              </div>
              {{/each}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>