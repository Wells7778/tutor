<div class="container my-3">
  <div class="row g-5 justify-content-between">
    <div class="col-4">
      <div class="container-fluid">
        <div class="row">
          <div class="col align-items-center">
            <div class="card border border-0">
              <img src="{{user.avatar}}" class="card-img-top" alt="...">
              <div class="card-body">
                <h5 class="card-title fs-1 my-3">{{user.name}}</h5>
                <p class="card-text my-3">{{user.country}}</p>
                <p class="card-text fs-5 fw-bold my-3">About Me</p>
                <p class="card-text my-3">{{user.description}}</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-7">
      <div class="container-fluid">
        <div class="row">
          <div class="card border border-0">
            <div class="card-body">
              <h5 class="card-title fw-bold">New Schedule</h5>
              <div class="row row-cols-2 g-1">
                {{#each extra.newCourses}}
                <div class="col">
                  <div class="card">
                    <div class="card-body">
                      <div class="row">
                        <div class="col-8">
                          <p class="card-text">Time: {{this.startTime}}</p>
                          <p class="card-text">Teacher Name: {{this.teacherName}}</p>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                {{/each}}
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="card border border-0">
            <div class="card-body">
              <h5 class="card-title fw-bold">Lesson History</h5>
              <div class="row row-cols-1 g-1">
                {{#each extra.completeCourses}}
                <div class="col">
                  <div class="card">
                    <div class="card-body">
                      <div class="card-title">
                        <h5 class="card-text">
                          {{this.startTime}}
                        </h5>
                      </div>
                      <div class="row">
                        <div class="col-12">
                          <p class="card-text">{{this.teacherName}}</p>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                {{/each}}
              </div>
            </div>
          </div>
        </div>
        <div class="row row-cols-2 g-5 mt-5">
          <div class="col">
            <div class="d-flex justify-content-center mb-3">
              <div class="circle bg-secondary fs-1 text-center">1</div>
            </div>
            <div class="d-flex justify-content-center">
              <div class="fs-5 fw-bold">Weekly Ranking</div>
            </div>
          </div>
          <div class="col">
            <div class="d-flex justify-content-center mb-3">
              <div class="circle bg-secondary fs-1 text-center">1</div>
            </div>
            <div class="d-flex justify-content-center">
              <div class="fs-5 fw-bold">Overall Ranking</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>